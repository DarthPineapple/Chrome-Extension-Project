{
    "manifest_version": 3,
    "name": "FocusShield AI",
    "version": "1.0.0",
    "description": "FocusShield AI uses the openai api to block unsafe content for children and enable a better browsing experience",
    "options_page": "options.html",
    "permissions": ["storage"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_ui":{
        "page": "options.html"
    },
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
    }
}